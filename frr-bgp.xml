    <scenario_name>frr-bgp</scenario_name>
    <!--ssh_version>1</ssh_version-->
    <ssh_key>~/.ssh/id_rsa.pub</ssh_key>
    <automac offset="51"/>
    <!--vm_mgmt type="none"/!-->
    <vm_mgmt type="private" network="10.21.0.0" mask="16" offset="64">
      <host_mapping />
    </vm_mgmt>
    <vm_defaults>
    	<console id="0" display="no"/>
		<console id="1" display="yes"/>
    </vm_defaults>
  </global>

  <!-- REDES --> 

